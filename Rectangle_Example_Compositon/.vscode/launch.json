{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/outDebug.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-I${workspaceFolder}/include",
        "${workspaceFolder}/src/*.cpp",
        "${workspaceFolder}/main.cpp",
        "-o",
        "${workspaceFolder}/main.exe"
    ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/mingw64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "d:/Labs/C++ Labs/OOP_Labs/Lecture_Examples/Rectangle_Example_Compositon",
      "program": "d:/Labs/C++ Labs/OOP_Labs/Lecture_Examples/Rectangle_Example_Compositon/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}